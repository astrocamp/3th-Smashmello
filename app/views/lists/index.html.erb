<div class="container mx-auto">

  <h1 class="text-4xl">List</h1>

  <%= link_to 'Add list', new_list_path %>
  <hr>
  <div class="px-2">
    <div class="flex -mx-2">
      <% @lists.each do |list| %>
      <div class="w-1/3 px-2">
        <%= link_to list.title, list_path(list) %>
        <%= link_to 'Edit', edit_list_path(list) %>
        <%= link_to 'Delete', list_path(list), method: 'delete', data: {confirm:'Sure?'} %>
      </div>
      <% end %>
    </div>
  </div>
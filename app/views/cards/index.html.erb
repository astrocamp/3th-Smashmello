<div class="container mx-auto">

  <h1 class="text-4xl">Card index</h1>

  <hr>

  <div class="card" style="width: 18rem;">
    <% @cards.each do |card| %>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
      <%= link_to card.title, card_path(card) %>
      <br>
      <%= card.due_date %>
      </li>
    </ul>
    <% end %>
  </div>






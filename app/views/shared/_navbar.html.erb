<nav class="navbar navbar-expand-lg my_navbarset py-0 justify-content-end" id="navbar" >
  <div id="main_navbar">

    <%= link_to root_path, class:"navbar_btn_bgc navbar_logo_place mx-auto" do %>
      <%= image_tag "smashmello-logo-white(default)(navbar).png", alt: "Smashmello", height:38, width:128 %>
    <% end %>

    <div class="dropdown mr-auto">
      <% if user_signed_in? %>
        <span id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <% if current_user.avatar.attached? %>
            <%= image_tag current_user.avatar.variant(resize_to_limit: [32, 32]),height:38, width:48, class: 'rounded-circle btn-sm navbar_btn_bgc clickhand' %>
          <% else %>
            <%= image_tag "https://fakeimg.pl/38x38/?text=?", class: 'rounded-circle clickhand' %>
          <% end %>
        </span>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <span class="mx-2"><%= current_user.username %></span>
          <span class="mx-2"><%= current_user.email %></span>

          <div class="dropdown-divider"></div>
          <%= link_to "使用者設定", edit_user_registration_path, class: 'dropdown-item btn-info' %>

          <div class="dropdown-divider"></div>
          <%= link_to destroy_user_session_path, method: "delete", data: {confirm: "要登出嘛"} , class: 'dropdown-item btn-info' do %>
            登出　<i class="fas fa-sign-out-alt"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</nav>
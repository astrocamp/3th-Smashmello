
<%= render "boardcreate", board: @board %>

<% content_for :navbar do %>
<%= render 'shared/navbar' %>
<% end %>

<p class="board-notice"><%= notice %></p>

<div class="all-boards-container">
  <p class="board-title">
    <span class="fas fa-user-edit"></span>
    個人看板
  </p>
  <% @private_boards.each do |board| %>
    <ul class="personal-boards">
      <li>
        <%= link_to board_path(board.id), class: 'card-body' do %>
        <span class="card-title">
          <%= board.title %>
        </span>
        <% end %>
      </li>
    </ul>
  <% end %>
</div>

<div class="all-boards-container">
  <p class="board-title">
    <span class="fas fa-users"></span>
    團隊看板
  </p>
  <% @public_boards.each do |board| %>
    <ul class="team-boards">
      <li>
        <%= link_to board_path(board.id), class: 'card-body' do %>
        <span class="card-title">
          <%= board.title %>
        </span>
        <% end %>
      </li>
    </ul>
  <% end %>
</div>

<div class="card-create">
  <p class="board-create">
    <a href="" class="btn mb-4" data-toggle="modal" data-target="#createBoard">新增Board ＋</a>
  </p>
</div>


<div aria-live="polite" aria-atomic="true" style="position: absolute; top: 40px; right: 0;">
  <% @searchuser.each do |invitation| %>
  <div class="toast" role="alert" data-autohide="false" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <img src="..." class="rounded mr-2" alt="...">
      <strong class="mr-auto"></strong>
      <small><%= invitation.created_at %></small>
    </div>
    <div class="toast-body">
      <%= invitation.message %>
      <%= link_to "Agree", agree_invite_boards_path(id: invitation.id, board_id: invitation.board_id, agree: true), method: "put", remote: true, class:"btn btn-success btn-sm" %>
      <%= link_to 'Disagree', agree_invite_boards_path(id: invitation.id, board_id: invitation.board_id, agree: false), method: "put", remote: true, class:"btn btn-danger btn-sm" %>
    </div>
  </div>
  <% end %>
</div>
<%= form_for(board) do |f| %>

  <div class="form-group">
    <%= f.label :title, "標題" %>
    <%= f.text_field :title , class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :visibility, "狀態" %>
    <%= f.text_field :visibility , class: 'form-control' %> 
  </div>
  <div class="form-group d-flex justify-content-end">
    <%= f.submit %>
  </div>
  
<% end %>
